# Environment Configuration for PagePilot Backend
# Copy this file to .env and update the values as needed

# Database Configuration
# For local development with SQLite (recommended for getting started)
DATABASE_URL="file:./dev.db"

# For production with PostgreSQL (optional)
# DATABASE_URL="postgresql://username:password@localhost:5432/pagepilot?schema=public"

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Security
# Generate a secure random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Logging
LOG_LEVEL=info

# Optional: For development debugging
# NODE_ENV=development 